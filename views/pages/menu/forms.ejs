<!DOCTYPE html>

<html lang="pt-BR">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <script src="/views/pages/menu/vendor/jquery/jquery.js"></script>
  <script src="/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
  <script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
  <script type="text/javascript" src="/views/pages/menu/vendor/jquery/jquery.maskedinput-1.1.4.pack.js" /></script>

  <script>

    $(document).ready(function (e) {
      
      $("form[ajax=true]").submit(function (e) {
        swal({
          allowOutsideClick: false,
          title: 'Carregando...',
          
        });
        swal.showLoading();
        e.preventDefault();
        var form_data = $(this).serialize();
        var form_url = $(this).attr("action");
        var form_method = $(this).attr("method").toUpperCase();
        $.ajax({
          url: form_url,
          type: form_method,
          data: form_data,
          cache: false,
          async: true,
          error: function (xhr, status, error) {
            // swal({
            //   allowOutsideClick: false,
            //   title: 'Carregando...',
            // }),
            // swal.showLoading();
            if (xhr.responseText) {
              //swal.close();
              swal({
                type: 'error',
                showCloseButton: true,
                allowOutsideClick: false,
                title: xhr.responseText,
                text: 'Algo deu errado! Verifique os erros!',
              })
            }
          },
          success: function (msg) {
            // swal({
            //   allowOutsideClick: false,
            //   title: 'Carregando...',
            // }),
            //   swal.showLoading();
            if (msg) {
              swal.close();
              swal({
                type: 'success',
                allowOutsideClick: false,
                title: msg,
                text: 'Deu tudo certo!',
              })
            };
          }
        });

      });

    });
  </script>
</head>
<script type="text/javascript">
  $(document).ready(function () {
    $("#cpf").mask("999.999.999-99");
  });
</script>

<body>

  <!-- Breadcrumb-->
  <div class="breadcrumb-holder">
    <div class="container-fluid">
      <ul class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/login">Home</a>
        </li>
        <li class="breadcrumb-item active">Adicionar </li>
      </ul>
    </div>
  </div>
  <section class="forms">
    <div class="container-fluid">
      <!-- Page Header-->
      <header>
        <h1 class="h3 display">Adicionar Funcionário </h1>
      </header>
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header d-flex align-items-center">
              <h4>Adicionar Individual</h4>
            </div>
            <div class="card-body">

              <p>Informe o CPF</p>
              <form action="/novo" method="POST" ajax="true" id="enviar">
                <div class="form-group">

                  <input type="text" class="form-control" id="cpf" name="cpf" required placeholder="somente números" autofocus="true">

                  <!-- <input type="text" id="cpf" placeholder="somente números" class="form-control"> -->
                </div>
                <div class="form-group">

                  <input type="submit" value="Adicionar" class="btn btn-primary">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>
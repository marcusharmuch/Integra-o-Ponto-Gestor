<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <script src="/views/pages/menu/vendor/jquery/jquery.js"></script>
  <script src="/node_modules/sweetalert2/dist/sweetalert2.min.js" />
  <script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
  <script src="http://malsup.github.com/jquery.form.js"></script>
  <script> 
    $(document).ready(function (e) {

      $("form[ajax=true]").submit(function (e) {

        e.preventDefault();

        var form_data = $(this).serialize();
        var form_url = $(this).attr("action");
        var form_method = $(this).attr("method").toUpperCase();
        $.ajax({
          url: form_url,
          type: form_method,
          data: form_data,
          cache: false,
          success: function (msg) {
            swal(msg, 'Algo deu errado! Contato o Suporte', 'error')
          }
        });

      });

    });
  </script>

<script type="text/javascript">
  
    $(document).ready(function () {
      $("#cpf").mask("999.999.999-99");
    });
  </script>
</head>

<script type="text/javascript">

  $(document).ready(function () {
    $("#cpf").mask("999.999.999-99");
  });
</script>

<body>

  <!-- Breadcrumb-->
  <div class="breadcrumb-holder">
    <div class="container-fluid">
      <ul class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/login">Home</a>
        </li>
        <li class="breadcrumb-item active">Inserir </li>
      </ul>
    </div>
  </div>
  <section class="forms">
    <div class="container-fluid">
      <!-- Page Header-->
      <header>
        <h1 class="h3 display">Inserir Funcionário </h1>
      </header>
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header d-flex align-items-center">
              <h4>Inserir Individual</h4>
            </div>
            <div class="card-body">
             

              <p>Informe o CPF</p>
              <form action="/novo" method="POST" ajax="true" id="enviar">
                <div class="form-group">
                  <input type="text" class="form-control" id="cpf" name="cpf" placeholder="somente números">
                </div>
                <div class="form-group">

                  <input type="submit" value="Inserir" class="btn btn-primary">
                </div>
              </form>
             </div>
            </div>
          </div>
        </div>
      </div>
  </section>

</body>

</html>